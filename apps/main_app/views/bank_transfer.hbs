<div class="row d-flex justify-content-center">
  <div class="col-4">
    <form action="/bank/transfer" method="post">
      {{#if msg}}
        <div class="alert alert-{{{msg.type}}}">
          {{{msg.body}}}
        </div>
      {{/if}}
      <div class="mb-3">
        <div class="form-floating">
          <input
            type="number"
            class="form-control"
            id="floatingInput"
            placeholder="Amount of money"
            name="amount"
          />
          <label for="floatingInput">Amount</label>
        </div>
      </div>
      <div class="mb-3">
        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            id="floatingPassword"
            placeholder="To Account"
            name="targetAccount"
          />
          <label for="floatingPassword">Target account</label>
        </div>
      </div>
      <div class="mb-3">
        <button
          class="w-100 btn btn-lg btn-primary"
          type="submit"
        >Transfer</button>
      </div>
    </form>
  </div>
</div>